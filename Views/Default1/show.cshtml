
@{
    if (Session["uName"] == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/-Lay.cshtml";
    }
}

<h2></h2>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/modern-business.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.js"></script>
   
   
</head>



<html>
<body background="~/images/gbb.jpg " style="background-size:cover">

    <br />
    <br />
    <div style="width:100% ; float:right;width:30%">




        <marquee direction="down" scrollamount="20" onmouseover='stop();' onmouseout='start();'>
            <img src="~/images/images (6).jpg" style="width:300px;height:300px">

            <img src="~/images/images (3).jpg" style="width:300px;height:300px">
            <img src="~/images/images (4).jpg" style="width:300px;height:300px">
            <img src="~/images/images (5).jpg" style="width:300px;height:300px">
            <img src="~/images/images (7).jpg" style="width:300px;height:300px">
        </marquee>

    </div>
    <div style="float:left;width:50%">
       
        <input type="text" id="b1" placeholder="search"  />
        
        <div id="result"></div>
        <h2 style="color:red">Title      &nbsp;&nbsp;&nbsp;    Description</h2>

        @foreach (var j in ViewBag.sh)
        {
            if (j.type == "Jobs")
            {
                <table class="table" style="border:4px solid green;background-color:antiquewhite">

                    <tr>
                        <th style="width:20%;border:4px solid green">Title :    @j.title</th>
                        <th style="width:60%;border:4px solid green">Description:   @j.description</th>
                        <th style="width:60%;border:4px solid green"><a href="/Default1/des?id=@j.Id" class="btn btn-primary">Description</a></th>
                    </tr>
                </table>

            }
            else { continue; }

           
    </div>
    <script type="text/javascript">

    $('#b1').change(function () {
       
        var value = $('#b1').val();

        $('#result').load('/Default1/category?j=' + value);
    });

    </script>
</body>


</html>
